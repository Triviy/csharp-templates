{
  "$schema": "http://json.schemastore.org/template",
  "author": "CompanyName",
  "classifications": [ "CompanyName", "System.API", "WebAPI" ],
  "name": "CompanyName.System.API",
  "shortName": "cnsystemapi",
  "sourceName": "TemplateName",
  "defaultName": "NewTemplate",
  "identity": "CompanyName.System.API.CSharp",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net5.0",
          "description": "Target net5.0"
        }
      ],
      "replaces": "net5.0",
      "defaultValue": "net5.0"
    },
    "DB": {
      "type": "parameter",
      "description": "Database engine that solution will be connected to.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "SQLServer",
          "description": "Target net5.0"
        },
        {
          "choice": "MongoDB",
          "description": "Target net5.0"
        }
      ],
      //"replaces": "SQLServer",
      "defaultValue": "SQLServer"
    },
    "UseMongoDB": {
      "type": "computed",
      "value": "(DB == \"MongoDB\")"
    },
    //"AuthorName": {
    //  "type": "parameter",
    //  "defaultValue": "(insert author name)",
    //  "replaces": "AuthorName",
    //  "datatype": "text",
    //  "description": "Author name"
    //},
    "HttpsPort": {
      "type": "parameter",
      "datatype": "integer",
      "description": "Port number to use for the HTTPS endpoint in launchSettings.json."
    },
    "HttpsPortGenerated": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 44300,
        "high": 44399
      }
    },
    "HttpsPortReplacer": {
      "type": "generated",
      "generator": "coalesce",
      "parameters": {
        "sourceVariableName": "HttpsPort",
        "fallbackVariableName": "HttpsPortGenerated"
      },
      "replaces": "44321"
    }
  }
}
